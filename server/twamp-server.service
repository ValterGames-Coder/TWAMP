[Unit]
Description=TWAMP Daemon Server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/usr/local/bin/twamp-server --foreground
StandardOutput=journal
StandardError=journal
KillSignal=SIGINT
SendSIGKILL=yes
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target